{
  email admin@haltman.io

  on_demand_tls {
    ask http://127.0.0.1:9000/ask
    interval 2m
    burst 5
  }
}

:80 {
  redir https://{host}{uri} permanent
}

forward.haltman.io {
  root * /var/www/mail-forwarding
  file_server
}

:443 {
  tls {
    on_demand
  }

  root * /var/www/mail-forwarding
  file_server
}